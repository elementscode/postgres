{
  "compilerOptions": {
    "target": "ES5",
    "inlineSources": true,
    "noEmitOnError": true,
    "allowJs": false,
    "declaration": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "noImplicitAny": false,
    "outDir": ".elements/dist",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*"
  ]
}
